import os
import telebot
from datetime import datetime

# 🔑 Token del bot — reemplázalo con el tuyo (entre comillas)
BOT_TOKEN = os.getenv("BOT_TOKEN", "AAEkbK0MwfCsI83uFGoxT-xmzeGuAtwi"

# Crear instancia del bot
bot = telebot.TeleBot(BOT_TOKEN)

# 📩 Mensaje de bienvenida
@bot.message_handler(commands=['start', 'help'])
def send_welcome(message):
    bot.reply_to(message, (
        "👋 ¡Hola! Soy PrediFutbol IA ⚽\n"
        "Puedo enviarte pronósticos automáticos y estadísticas básicas.\n\n"
        "Comandos disponibles:\n"
        "• /start o /help → Ver este mensaje\n"
        "• /hoy → Ver pronósticos del día"
    ))

# 📅 Pronósticos del día (ejemplo básico)
@bot.message_handler(commands=['hoy'])
def send_today(message):
    hoy = datetime.now().strftime("%d/%m/%Y")
    bot.reply_to(message, (
        f"📆 Pronósticos para hoy ({hoy}):\n\n"
        "⚽ Real Madrid vs Barcelona — +2.5 goles\n"
        "⚽ PSG vs Lyon — 1X\n"
        "⚽ Liverpool vs Chelsea — Ambos marcan ✅"
    ))

# 🏃 Ejecutar el bot (escucha los mensajes)
bot.polling()
